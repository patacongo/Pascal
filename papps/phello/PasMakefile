#
# Directories
#

PHELLODIR = ${shell pwd}
PAPPSDIR  = $(PHELLODIR)/..
PIMAGEDIR = $(PAPPSDIR)/image
PUNITDIR  = $(PAPPSDIR)/units

PASCAL    = $(PAPPSDIR)/..
include $(PASCAL)/tools/Config.mk

#
# Tools
#

PASOPTS   = -I$(PUNITDIR)

#
# Objects and targets
#

SUFFIXES  += .pas .o1 .o .pex .err .lst

PSRCS   = phello.pas
POBJS1  = $(PSRCS:.pas=.o1)
POBJS   = $(PSRCS:.pas=.o)
PEX     = $(PSRCS:.pas=.pex)

#
# Targets
#

all: phello
.PHONY: all phello clean distclean

$(POBJS1): %.o1: %.pas
	$(Q) echo "  $@"
	$(Q) $(PAS) $(PASOPTS) $<

$(POBJS): %.o: %.o1
	$(Q) echo "  $@"
	$(Q) $(POPT) $(POPTOPTS) $<

$(PEX): %.pex: %.o
	$(Q) echo "  $@"
	$(Q) $(PLINK) $(PLINKOPTS) $< $@

$(PIMAGEDIR)/phello.pex: $(PEX)
	$(Q) echo "  $@"
	$(Q) $(INSTALL) $< $@

phello: $(PIMAGEDIR)/phello.pex

clean:
	$(Q) $(RM) phello *.o *.o1 *.pex *.err *.lst core *~

distclean: clean
