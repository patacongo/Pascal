include $(APPDIR)/Make.defs

ifneq ($(CONFIG_PASCAL_TARGET_TOOLS),)

PASCAL = $(APPDIR)/pascal
include $(PASCAL)/tools/Config.mk

INSN_INCDIR = $(INSNDIR)/include
CFLAGS += -I. -I$(INSN_INCDIR)

CSRCS  = popt_strings.c popt_strconst.c popt_strstack.c popt_local.c
CSRCS += popt_constants.c popt_longconst.c popt_branch.c popt_loadstore.c
CSRCS += popt_reloc.c popt_finalize.c popt_peephole.c popt_util.c

# main entry point

MAINSRC   = popt.c

# Built-in application info

PROGNAME  = popt
PRIORITY  = $(CONFIG_PASCAL_POPT_PRIORITY)
STACKSIZE = $(CONFIG_PASCAL_POPT_STACKSIZE)
MODULE    = $(CONFIG_PASCAL_TARGET_TOOLS)
endif

include $(APPDIR)/Application.mk
